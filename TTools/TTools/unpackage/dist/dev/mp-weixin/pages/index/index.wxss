  height: 420px;
}
.container {
  padding: 20px;
  font-size: 14px;
  line-height: 24px;
}
.title {
  width: 100rpx;
}
.popup-content {
  align-items: center;
  justify-content: center;
  padding: 15px;
  height: 50px;
  background-color: #fff;
}